<div class="container mt-4">
    <h4 class="mb-4 text-danger">Có thể bạn sẽ thích</h4>
    <div class="row">
        @foreach (var sp in Model)
        {
            <div class="col-2 mb-4">
                <div class="card h-100" style="width: 100%; text-align: center;">
                    <div class="card-header p-0">
                        <a href="/KhachHang/DetailMonAn/@sp.id">
                            <img class="card-img-top" src="~/HinhAnh/@sp.Images.Trim()" alt="@sp.Name.Trim()" style="height: 150px; object-fit: cover;">
                        </a>
                    </div>
                    <div class="card-body p-2">
                        <strong style="font-size: 0.9rem;">@sp.Name.Trim()</strong>
                        <p style="font-size: 0.85rem;">Giá: @string.Format("{0:0,0}", sp.Price) VND</p>
                    </div>
                    <div class="card-footer p-2">
                        @{
                            if (Session["KhachHang"] != null)
                            {
                                <a href="/KhachHang/AddGioHang/@sp.id" class="btn btn-sm btn-danger" onclick="alert('Thêm sản phẩm vào giỏ hàng thành công');">Thêm vào giỏ hàng</a>
                            }
                            else
                            {
                                <a href="/KhachHang/DangNhap">
                                    <button type="button" class="btn btn-sm btn-secondary">Thêm vào giỏ hàng</button>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
